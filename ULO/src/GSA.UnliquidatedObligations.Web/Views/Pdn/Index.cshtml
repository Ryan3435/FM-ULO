@using GSA.UnliquidatedObligations.BusinessLayer.Authorization
@using GSA.UnliquidatedObligations.BusinessLayer.Data
@using GSA.UnliquidatedObligations.Web.Controllers
@model IEnumerable<GSA.UnliquidatedObligations.Web.Models.PdnAttributeListItem>

@{
    this.SetTitles(PageKeys.PdnAttributes, "Manage Excluded PDNs");
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-bordered table-hover table-striped">
    <thead>
        <tr>
            <th>
                Region
            </th>
            <th>
                # of Excluded PDNs
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @(item.Region == null ? "All Regions" : item.Region.RegionNumber)
                </td>
                <td>
                    @item.ExcludedCount
                </td>
                <td>
                    @Html.ActionLink("Details", PdnController.ActionNames.Details, new { regionKey = item.RegionKey })
                </td>
            </tr>
        }
    </tbody>
</table>
