<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ULO</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/ULO/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
</head>
<body>
    @Html.Partial("_Navigation");

    <div class="container body-content">
        @if (ViewBag.PageTitle != null)
        {
        <div class="row">
            <div class="col-xs-12">
                <h1>@ViewBag.PageTitle</h1>
                @if (ViewBag.PageSubTitle != null)
                {
                    <p class="subheading">@ViewBag.PageSubTitle</p>
                }
            </div>
        </div>
        }
        @RenderBody()
        <hr />
        <footer class="row">
            <div class="col-md-6">&copy; @DateTime.Now.Year - ULO</div>
            <div class="col-md-6 text-right">Timberwolves</div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/ULO")
    @RenderSection("scripts", required: false)
</body>
</html>
