@using GSA.UnliquidatedObligations.Web.Controllers
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ULO</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/ULO/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
</head>
<body>
    @Html.Partial("_Navigation")

    <div class="container body-content" style="margin-top: 30px">
        @if (ViewBag.PageTitle != null)
        {
            <div class="row">
                <div class="col-xs-12">
                    <h1>@ViewBag.PageTitle</h1>
                    @if (ViewBag.PageSubTitle != null)
                {
                        <p class="subheading">@ViewBag.PageSubTitle</p>
                    }
                </div>
            </div>
        }
        @RenderBody()
        <hr />
        <footer>
            <div class="row">
                <ul id="footer-menu" class="text-center">
                    <li>@Html.ActionLink("About", HomeController.ActionNames.About, HomeController.Name)</li>
                </ul>
            </div>
            <div class="row">
                <div class="col-md-4">&copy; @DateTime.Now.Year - ULO</div>
                <div class="col-md-8 text-right">Timberwolves</div>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/ULO")
    @RenderSection("scripts", required: false)
</body>
</html>
