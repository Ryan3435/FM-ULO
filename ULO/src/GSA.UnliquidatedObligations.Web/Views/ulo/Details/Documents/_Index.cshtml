@model GSA.UnliquidatedObligations.Web.Models.DocumentsViewModel
<div class="row documents">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Documents</h3>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-md-12">
                    <table class="table table-responsive documents-list">
                        <tr>
                            <th>
                                Uploaded By
                            </th>
                            <th>
                                Name
                            </th>
                            <th></th>
                        </tr>
                        @foreach (var document in Model.Documents)
                        {
                            var modalId = "#" + @document.DocumentId + "Modal";
                            <tr>
                                <td>
                                    @document.AspNetUser.UserName
                                </td>
                                <td>
                                    @document.DocumentType.Name
                                </td>
                                <td>
                                    <a data-target="" data-toggle="modal" data-target="@modalId" href="@modalId">View</a> |
                                    @Html.ActionLink("Delete", "Delete", "Documents", new { documentId = document.DocumentId }, null)
                                </td>
                            </tr>
                        }
                    </table>
                    <button type="button" class="btn btn-primary document-add-btn" data-toggle="modal" data-target="#0Modal">Add Document</button>
                </div>
            </div>
        </div>
    </div>
</div>

