@model GSA.UnliquidatedObligations.Web.Models.AdvanceViewModel

<div class="row advance">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Advannce Workflow</h3>
        </div>
        <div class="panel-body">
            <div class="form-horizontal">
                <div class="row">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="col-md-3">
                        @Html.LabelFor(model => model.Answer, string.Format("{0}:", Model.WorkflowQuestionChoices.QuestionLabel), htmlAttributes: new { @class = "control-label" })
                        @Html.DropDownListFor(model => model.Answer, new SelectList(Model.WorkflowQuestionChoices.Choices, "Key", "Value"), "Select...")
                        @Html.ValidationMessageFor(model => model.Answer, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-3">
                        @Html.LabelFor(model => model.Justification, "Justification:", htmlAttributes: new { @class = "control-label" })
                        @Html.DropDownListFor(model => model.Justification, new SelectList(Model.JustificationChoices, "Key", "Value"), "Select....")
                        @Html.ValidationMessageFor(model => model.Justification, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-4">
                        @Html.LabelFor(model => model.JustificationOther, "Comments:", new {@class = "control-label"})
                        @Html.EditorFor(model => model.JustificationOther)
                    </div>

                </div>
                <div class="row">
                    <div class="col-md-10 submit-col">
                        <input type="submit" value="Submit" class="btn btn-default" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
