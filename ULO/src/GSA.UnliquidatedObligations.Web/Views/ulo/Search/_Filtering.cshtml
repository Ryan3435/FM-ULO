@model GSA.UnliquidatedObligations.Web.Models.FilterViewModel

<button id="showFilters" type="button" class="btn show-filters">
    Show Filters
</button>

@using (Html.BeginForm("RegionWorkflows", "Ulo", FormMethod.Get))
{
    <table class="table filter-region-workflows table" id="filterRegions">

        <tr>
            <td class="label-container"><label for="uloId">Ulo Id:</label></td>
            <td><input type="text" name="uloId" id="uloId" value="@Context.Request["uloId"]" /></td>
            <td class="label-container"><label for="organization">Zone:</label></td>
            <td>@Html.DropDownList("zone", Model.Zones, "", new { @class = "form-control" })</td>
            <td class="label-container"><label for="region">Region:</label></td>
            <td>@Html.DropDownList("region", Model.Regions, "", new { @class = "form-control" })</td>

        </tr>
        <tr>
            <td class="label-container"><label for="docType">Document Type:</label></td>
            <td>@Html.DropDownList("docType", Model.DocTypes, "", new { @class = "form-control" })</td>
            <td class="label-container"><label for="pegasysDocumentNumber">Pegasys Document Number:</label></td>
            <td><input type="text" name="pegasysDocumentNumber" id="pegasysDocumentNumber" value="@Context.Request["pegasysDocumentNumber"]" /></td>
            <td class="label-container"><label for="pegasysTitleNumber">Pegasys Title Number:</label></td>
            <td><input type="text" name="pegasysTitleNumber" id="pegasysTitleNumber" value="@Context.Request["pegasysTitleNumber"]" /></td>

        </tr>
        <tr>
            <td class="label-container"><label for="fund">Fund:</label></td>
            <td><input type="text" name="fund" id="fund" value="@Context.Request["fund"]" /></td>
            <td class="label-container"><label for="organization">Organization:</label></td>
            <td><input type="text" name="organization" id="organization" value="@Context.Request["organization"]" /></td>
            <td class="label-container"><label for="baCode">BA Code:</label></td>
            <td>@Html.DropDownList("baCode", Model.BaCodes, "", new { @class = "form-control" })</td>

        </tr>
        <tr>
            <td class="label-container"><label for="pegasysVendorName">Pegasys Vendor Name:</label></td>
            <td><input type="text" name="pegasysVendorName" id="pegasysVendorName" value="@Context.Request["pegasysVendorName"]" /></td>
            <td class="label-container"><label for="contractingOfficersName">Contracting Officers Name:</label></td>
            <td><input type="text" name="contractingOfficersName" id="contractingOfficersName" value="@Context.Request["contractingOfficersName"]" /></td>
            <td class="label-container"><label for="currentlyAssignedTo">Currently Assigned to:</label></td>
            <td><input type="text" name="currentlyAssignedTo" id="currentlyAssignedTo" value="@Context.Request["currentlyAssignedTo"]" /></td>


        </tr>
        <tr>
            <td class="label-container"><label for="hasBeenAssignedto">Has been Assigned to:</label></td>
            <td><input type="text" name="hasBeenAssignedto" id="hasBeenAssignedto" value="@Context.Request["hasBeenAssignedto"]" /></td>
            <td class="label-container"><label for="awardNumber">Award Number:</label></td>
            <td><input type="text" name="awardNumber" id="awardNumber" value="@Context.Request["awardNumber"]" /></td>
            <td class="label-container"><label for="reasonIncludedInReview">Reason Included In Review:</label></td>
            <td>
                <select id="reasonIncludedInReview" name="reasonIncludedInReview" class="form-control">
                    <option></option>
                    <option value="Accrual (AR; EE):  No Activity in 3 Months">Accrual (AR; EE):  No Activity in 3 Months</option>
                    <option value="Credit Card Log/Training Log (CL; CT):  No Activity in 3 Months">Credit Card Log/Training Log (CL; CT):  No Activity in 3 Months</option>
                    <option value="Direct Entered Order (PP) - No Activity in 6 Months">Direct Entered Order (PP) - No Activity in 6 Months</option>
                    <option value="FAS Orders/Fedstrip Acquisition (IY):  No Activity in 3 Months">FAS Orders/Fedstrip Acquisition (IY):  No Activity in 3 Months</option>
                    <option value="FAS Purchase Order (QP) - No Activity in 3 months">FAS Purchase Order (QP) - No Activity in 3 months</option>
                    <option value="Financed Order (BW):  No Activity in 3 Months">Financed Order (BW):  No Activity in 3 Months</option>
                    <option value="FTS Purchase Order (TP) - No Activity in 3 months">FTS Purchase Order (TP) - No Activity in 3 months</option>
                    <option value="GMA Order (GP; GD)  No Activity in 3 Months">GMA Order (GP; GD)  No Activity in 3 Months</option>
                    <option value="Inter/Intra Agency Agreements (GX; IX; PX; EJ):  No Activity in 3 Months">Inter/Intra Agency Agreements (GX; IX; PX; EJ):  No Activity in 3 Months</option>
                    <option value="Lease Accrual (LR; LU):  No Activity in 3 Months">Lease Accrual (LR; LU):  No Activity in 3 Months</option>
                    <option value="Lease Purchase Request (LO):  No Activity in 3 months">Lease Purchase Request (LO):  No Activity in 3 months</option>
                    <option value="Lease Tax Accrual (LY):  No Activity in 6 Months">Lease Tax Accrual (LY):  No Activity in 6 Months</option>
                    <option value="Purchase Order/Contract (Task/Delivery; Stand-Alone)( EP; PJ) and Construction (EN; PN):  No Activity in 6 Months">Purchase Order/Contract (Task/Delivery; Stand-Alone)( EP; PJ) and Construction (EN; PN):  No Activity in 6 Months</option>
                    <option value="Purchase Order/Contract (Task/Delivery; Stand-Alone)( EP; PJ) and Construction (EN; PN):  No Expiration Date in EASi or No Activity in 6 Months or Award Expiration Date Greater Than 6 Months Past">Purchase Order/Contract (Task/Delivery; Stand-Alone)( EP; PJ) and Construction (EN; PN):  No Expiration Date in EASi or No Activity in 6 Months or Award Expiration Date Greater Than 6 Months Past</option>
                    <option value="Purchase Request (RWAs) (RR) - No activity in 6 months">Purchase Request (RWAs) (RR) - No activity in 6 months</option>
                    <option value="Recurring Service (RO):  No Activity in 3 Months">Recurring Service (RO):  No Activity in 3 Months</option>
                    <option value="Recurring Services - non LOGO (RB; EK) - No Activity in 3 Months">Recurring Services - non LOGO (RB; EK) - No Activity in 3 Months</option>
                    <option value="Relocation (LT):  No Activity in 3 Months">Relocation (LT):  No Activity in 3 Months</option>
                    <option value="SLA (PS):  No Activity in 1 Year">SLA (PS):  No Activity in 1 Year</option>
                    <option value="Training (PY):  No Activity in 3 Months">Training (PY):  No Activity in 3 Months</option>
                    <option value="Utility (UE):  No Activity in 3 Months">Utility (UE):  No Activity in 3 Months</option>
                </select>
            </td>
        </tr>
        <tr>
            <td class="label-container"><label for="valid">Valid:</label></td>
            <td>
                <select id="valid" name="valid" class="form-control">
                    <option></option>
                    <option value="true">Yes</option>
                    <option value="false">No</option>
                </select>
            </td>
            <td class="label-container"><label for="status">Status:</label></td>
            <td>@Html.DropDownList("status", Model.Statuses, "", new { @class = "form-control" })</td>
            <td class="label-container"><label for="reviewId">Review Id:</label></td>
            <td><input type="text" name="reviewId" id="reviewId" value="@Context.Request["reviewId"]" /></td>
        </tr>
        <tr>
            <td colspan="4">
                <button id="filterWorkflows" class="btn btn-primary">
                    Apply Filters
                </button>
                <button id="clearFilters" class="btn">
                    Clear Filters
                </button>
            </td>
        </tr>
    </table>
}
