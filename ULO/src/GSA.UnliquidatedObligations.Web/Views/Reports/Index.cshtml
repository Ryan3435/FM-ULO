@using GSA.UnliquidatedObligations.Web.Controllers;
@model IEnumerable<GSA.UnliquidatedObligations.BusinessLayer.Data.Reporting.ReportDescription>
@{
    ViewBag.Title = "Reports";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Reports</h2>
<table class="table table-bordered table-hover table-striped">
    <thead>
        <tr>
            <th>
                @Html.SortableHeaderFor(z => z.Title)
            </th>
            <th>
                @Html.SortableHeaderFor(z => z.Description)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
            {
            <tr contextId="@item.Name">
                <td>
                    @Html.ActionLink(
                    Html.DisplayFor(modelItem => item.Title).ToString(),
                    ReportsController.ActionNames.ConfigureReport,
                    new { name=item.Name })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
            </tr>
        }
    </tbody>
</table>

@Html.Partial("_PaginationPartial")

